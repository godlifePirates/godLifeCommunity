<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.glp.community.mapper.UserMapper">
    <insert id="insertUser">
        INSERT INTO tbl_user
        (seq
        ,email
        ,nickname
        ,password
        ,role_cd
        ,point
        ,nickname_unique_yn
        ,send_email_agree_yn
        ,create_id
        ,create_dt
        ,update_id
        ,update_date)
        VALUES
        (#{seq}
        ,#{email}
        ,#{nickname}
        ,#{password}
        ,#{roleCd}
        ,#{point}
        ,#{nicknameUniqueYn}
        ,#{sendEmailAgreeYn}
        ,#{createId}
        ,#{createDt}
        ,#{updateId}
        ,#{updateDt})
    </insert>

    <select id="loginUser" resultType="com.glp.community.mapper.UserDTO">
        SELECT
         seq
        ,email
        ,nickname
        ,role_cd
        ,point
        ,nickname_unique_yn
        ,send_email_agree_yn
        ,create_id
        ,create_dt
        ,update_id
        ,update_date
        FROM tbl_user
        WHERE 1=1
        AND email = #{email}
        AND password = #{password}
    </select>
</mapper>